<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:gravity="center"
    tools:context="ahv1.app.autohelpv2.EditaPerfil.AdicionaFotoPerfil">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewPerfil"
            android:layout_width="450px"
            android:layout_height="450px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/textusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewPerfil"
            android:text="Adicionar Foto"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/imagemCadastro"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/buttonSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageViewPerfil"
            android:layout_below="@+id/textusuario"
            android:layout_marginTop="13dp"
            android:text="Salvar"
            android:background="@drawable/botao"/>

        <Button
            android:id="@+id/buttonPular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonSalvar"
            android:layout_toLeftOf="@+id/buttonSalvar"
            android:layout_marginEnd="15dp"
            android:text=" Pular esta Etapa "
            android:background="@drawable/botao"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Foto de Perfil"
            android:textStyle="bold|italic"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:fontFamily="serif"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seja Bem Vindo ao AutoHelp!"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/buttonSalvar"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:fontFamily="serif"/>

    </RelativeLayout>

</RelativeLayout>
